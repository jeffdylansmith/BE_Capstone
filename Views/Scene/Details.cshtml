@model BE_Capstone.Models.Scene


@{
    ViewData["Title"] = "Details";
}

<input type="hidden" id="help" asp-for="SceneId">
<div>
    <input type="hidden" asp-for="SceneId" />
    <dl class="dl-horizontal">
         <dt>
            @Html.DisplayNameFor(model => model.Project) Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Title)
        </dd>
        <dt>
            Scene @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
         <dt>
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Order)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>    
    </dl>
</div>
<div>
    <a asp-controller="Line" asp-action="Create" asp-route-id="@Model.SceneId">Add a Line</a> |
    <a asp-controller="Direction" asp-action="Create" asp-route-id="@Model.SceneId">Add a Direction</a> |
    <a asp-action="Edit" asp-route-id="@Model.SceneId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="card">
<ul id="sortable" class="lineSortable">
@foreach (var orderproduct in Model.Lines.OrderBy(i => i.Order))
{
    <div class="card-block" class="ui-state-default">
        <h4 class="card-title">@orderproduct.Character.Name</h4>
        <h6 class="card-subtitle mb-2 text-muted">@orderproduct.Description</h6>
        <p class="card-text"><a asp-controller="Line" asp-action="Edit" asp-route-id="@orderproduct.LineId">@orderproduct.Body</a></p>
    </div>
}
</ul>
</div>



