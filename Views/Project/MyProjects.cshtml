@model IEnumerable<BE_Capstone.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h2>My Projects</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <a asp-action="Details" asp-route-id="@item.ProjectId"><td>
                @Html.DisplayFor(modelItem => item.Title)
            </td></a>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
