@model IEnumerable<BE_Capstone.Models.Line>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scene)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scene.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
